{
  "editor.minimap.enabled": false,
  "editor.wrappingIndent": "indent",
  "editor.overviewRulerBorder": false,
  "editor.lineHeight": 18,
  "workbench.colorTheme": "Gray Matter Dark",
  "[markdown]": {
    "editor.quickSuggestions": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
  },
  "git.enableSmartCommit": true,
  // "git.postCommitCommand": "sync",
  // "files.exclude": {
  //   "**/node_modules": true
  // },
  "files.watcherExclude": {
    "**/node_modules": true
  },
  "vscodeMarkdownNotes.noteCompletionConvention": "rawFilename",
  "ltex.workspaceDisabledRules": {
    "en-US": [
      "EN_QUOTES",
      "WHITESPACE_RULE"
    ]
  },
  "ltex.workspaceFolderDictionary": {
    "en-US": [
      "aliasable",
      "Choreographies",
      "typestate",
      "typestates"
    ]
  },
  "foam.edit.linkReferenceDefinitions": "withoutExtensions",
  "foam.files.ignore": [
    "/.vscode",
    "/_layouts",
  ]
}
